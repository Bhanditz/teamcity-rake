source "http://rubygems.org"
gem "rake"

gem "cucumber"
gem "rspec"

if (RUBY_VERSION.to_f != 1.8) then
  gem "test-unit"
end

# shoulda-mathcers 2.1.0 does not supports ruby-1.8.7
if (RUBY_VERSION.to_f == 1.8) then
  gem 'shoulda-matchers', '<2.1'
end

gem "test-spec"
gem "shoulda"

